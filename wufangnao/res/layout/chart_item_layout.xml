<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
  	  android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"   
		android:gravity="center_horizontal"
    >
   
     <RelativeLayout 
               android:layout_width="wrap_content"
               android:layout_height="0dp"
               android:layout_weight="8"
               >
               <LinearLayout 
                   android:id="@+id/tv_chart_dataheight"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/crocers_crolor_1"
                   android:layout_alignParentBottom="true"
                   android:gravity="center_horizontal"
                   >
               <TextView 
                  
                   android:id="@+id/tv_char_item_title"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="10sp"
                   android:textColor="#ffffff"
                   />
               </LinearLayout>
           </RelativeLayout>
         
           <RelativeLayout 
               android:id="@+id/llyt_chart_name"
               android:layout_width="wrap_content"
               android:layout_height="0dp"
               android:layout_weight="1"
               >
                 <View 
                     android:layout_above="@+id/tv_chart_propertyname"
               android:layout_width="wrap_content"
               android:layout_height="1dp"
               />
               <TextView 
                   
                   android:id="@+id/tv_chart_propertyname"
                   android:text="楼盘名称"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="#ffffff"
                   android:textSize="10sp"
                   android:layout_centerHorizontal="true"
                 	
                   />
           </RelativeLayout>
       

</LinearLayout>