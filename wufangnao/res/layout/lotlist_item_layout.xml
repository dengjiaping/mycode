<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/collection_textview_stytle"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:text="编号："
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_lotlist_id"
                    style="@style/collection_textview_stytle"
                    android:layout_margin="3dp"
                    android:singleLine="true"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/collection_textview_stytle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="土地用途：" />

                <TextView
                    android:id="@+id/tv_lotlist_used"
                    style="@style/collection_textview_stytle"
                    android:layout_margin="3dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/collection_textview_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:text="开盘日期：" />

                    <TextView
                        android:id="@+id/tv_lotlist_paydate"
                        style="@style/collection_textview_stytle"
                        android:layout_margin="3dp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6" >

                    <TextView
                        android:id="@+id/tv_lotlist_price"
                        style="@style/textview_stytle"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="3dp"
                        android:layout_toLeftOf="@+id/text_uiti"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/text_uiti"
                        style="@style/textview_stytle"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:text="(元/m2)"
                        android:textSize="10sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listcut_bottomline" />

</LinearLayout>