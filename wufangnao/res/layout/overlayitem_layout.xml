<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llyt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_property"
        android:orientation="vertical" >
		<TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="楼盘价格"
            android:textColor="#ffffff"
            android:textSize="14sp" 
            />
        <TextView
            android:id="@+id/tv_propertyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="楼盘名称"
            android:textColor="#000000" 
            android:layout_marginTop="3dp"/>
         

        <TextView
            android:id="@+id/tv_hotlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="最热标签"
            android:textColor="#000000"
            android:textSize="12sp" />
       
    </LinearLayout>
    <ImageView 
        android:id="@+id/iv_infobtoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_gravity="center_horizontal"
        android:src="@drawable/infobottom"
        android:layout_marginTop="-3dp"
        />

    <ImageView
        android:id="@+id/iv_voerlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_property" />

</LinearLayout>